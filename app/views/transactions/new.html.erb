<%= simple_form_for @transaction do |f| %>
  <%= f.input :type %>
  <%= f.input :amount %>

  <%= f.button :submit, "Income" %>
  <%= f.button :submit, "Outgoing" %>
  <p>
    <span class="income"> Income: <%= @monthly_income %> </span>
  </p>
  <p>
    <span class="outgoing"> Outgoing: <%= @monthly_outgoing %> </span>
  </p>
<% end %>
