<%= simple_form_for @transaction do |f| %>
  <%= f.input :type %>
  <%= f.input :amount %>

  <%= f.button :submit, "Income" %>
  <%= f.button :submit, "Outgoing" %>
  Income: <%= @income.collect(&:amount).map(&:to_f).inject(&:+) %>
  Outgoing: <%= @outgoing.collect(&:amount).map(&:to_f).inject(&:+) %>
<% end %>
