<% content_for :js do %>
  <%= javascript_include_tag :form %>
<% end %>

<%= simple_form_for transaction, :html => { :class => 'well' }, :defaults => { :input_html => {:class => 'span4'} } do |f| %>
  <%= f.input :type %>
  <%= f.input :amount %>

  <%= f.input :created_at %>
  <%= f.input :reoccurring, :as => :boolean, :input_html => {:class => 'reoccurring-check'} %>

  <%= f.input :bi_monthly, :as => :boolean %>
  <%= f.input :quarterly, :as => :boolean %>
  <%= f.input :custom_range, :as => :boolean %>

  <fieldset class="custom_range">
    <%= f.input :reoccurring_months %>
  </fieldset>

  <fieldset class="reoccurring">
    <%= f.input :starting_from %>
    <%= f.input :reoccurring_until %>
  </fieldset>

  <%= f.button :submit, "Income" %>
  <%= f.button :submit, "Outgoing" %>
<% end %>
